pipeline{
    agent any
    tools{
        nodejs 'node'
    }
    stages{
        stage('Clone Repo'){
            steps{
                git 'https://github.com/Emmanuel-9/gallery-1.git'
            }
        }
        stage('Build'){
            steps{
                sh 'npm install'
            }
        }
        stage('Test'){
            steps{
                sh 'npm test'
            }
        }
         
    }
    
}